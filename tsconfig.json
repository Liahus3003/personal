{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": "src",
    "downlevelIteration": true,
    "importHelpers": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2022",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "paths": {
      "@layout/*": [
        "app/site-layout/*"
      ],
      "@assets/*": [
        "assets/*"
      ]
    },
    "module": "es2020",
    "useDefineForClassFields": false
  }
}